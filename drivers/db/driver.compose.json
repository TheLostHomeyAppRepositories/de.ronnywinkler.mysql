{
    "id": "db",
    "name": {
        "en": "Database",
        "de": "Datenbank"
    },
    "images": {
        "large": "/drivers/db/assets/images/large.png",
        "small": "/drivers/db/assets/images/small.png"
    },
    "class": "sensor",
    "connectivity": [ "lan" ],
    "capabilities": [
       
    ],
    "pair": [{
        "id": "server",
        "navigation": {
            "next": "list_my_devices"
          }
        },
        {
            "id": "list_my_devices",
            "template": "list_devices",
            "navigation": {
                "next": "add_my_devices",
                "prev": "server"
            },
            "options": { "singular": true }
        },
        {
            "id": "add_my_devices",
            "template": "add_devices"
        }
    ],
    "repair": [{
        "id": "server",
        "navigation": {
            "next": "list_devices"
          }
        },
        {
            "id": "list_devices",
            "template": "list_devices",
            "navigation": {
                "next": "update_device",
                "prev": "server"
            },
            "options": { "singular": true }
        },
        {
            "id": "update_device",
            "template": "loading",
            "navigation": {
                "prev": "list_devices"
            }
        },
        {
            "id": "done",
            "template": "done"
        }
    ]
}